{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2017", "dom", "dom.iterable"],
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "./",
    "baseUrl": "./packages",
    "paths": {
      "@exmg/*": ["./*"]
    },
    "composite": true,
    "importHelpers": true
  },
  "include": ["*.ts"],
  "references": [
    {
      "path": "./packages/lit-base"
    },
    {
      "path": "./packages/lit-cli"
    },
    {
      "path": "./packages/lit-helpers"
    },
    {
      "path": "./packages/lit-controllers"
    },
    {
      "path": "./demo/"
    }
  ],
  "exclude": []
}
