{
  "name": "exmg-lit-utils",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "description": "Utils packages destined to help LitElement development throughout ExMachina",
  "license": "MIT",
  "homepage": "https://github.com/exmg/exmg-lit-utils",
  "scripts": {
    "clean": "del-cli packages/*/node_modules packages/*/package-lock.json && npm run clean:styles & npm run clean:typescript",
    "clean:styles": "del-cli packages/**/*-css.*",
    "clean:typescript": "tsc --build --clean",
    "build": "npm run build:typescript",
    "build:typescript": "tsc --build --verbose",
    "build:demo": "rollup --config ./rollup.config.js",
    "build:demo-styles": "node ./packages/lit-cli/index.js sass -f ./demo/**/*.scss",
    "build:docs": "npm run build && rm -rf ./docs && npm run build:demo && ./node_modules/.bin/jsdoc -c ./jsdoc.conf.json -R readme.md && node ./scripts/processDemoInDocumentation.js",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:prettier": "prettier \"packages/**/*.ts\" --check --ignore-path .gitignore",
    "lint:eslint": "eslint --ext .ts,.html .",
    "format:eslint": "eslint --ext .ts,.html . --fix",
    "format:prettier": "prettier \"packages/**/*.ts\" --write --ignore-path .gitignore",
    "format": "npm run format:eslint && npm run format:prettier",
    "start": "npm run build && npm run build:demo-styles && web-dev-server ./demos/index.html",
    "start:docs": "web-dev-server /docs/index.html"
  },
  "devDependencies": {
    "@exmg/eslint-config-lit": "^1.0.24",
    "@material/typography": "^14.0.0",
    "@exmg/prettier-config": "^1.0.23",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-strip": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "eslint": "^8.29.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-wc": "^1.3.2",
    "del-cli": "^3.0.1",
    "jsdoc": "^3.6.10",
    "lerna": "^7.0.0",
    "lit": "^3.0.0",
    "prettier": "^2.8.3",
    "rollup": "^2.57.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "run-script-os": "^1.1.6",
    "tui-jsdoc-template": "^1.2.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@sentry/browser": "^7.30.0",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.11.18",
    "@types/shelljs": "^0.8.11",
    "@web/dev-server": "^0.1.35",
    "@webcomponents/shadycss": "^1.11.0",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "commander": "^10.0.0",
    "inquirer": "^9.1.4",
    "node-sass-import": "^2.0.1",
    "node-watch": "^0.7.3",
    "redux": "^4.2.0",
    "replace": "^1.2.2",
    "sass": "1.57.1",
    "shelljs": "^0.8.5",
    "web-animations-js": "^2.3.1"
  }
}
